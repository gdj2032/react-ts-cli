{
  "compileOnSave": true,
  "compilerOptions": {
    "lib": ["es6", "dom", "es2015"],
    "module": "ESNext",
    "target": "es5",
    "allowJs": true,
    "jsx": "react",
    "sourceMap": true,
    "moduleResolution": "node",
    "noImplicitReturns": true,
    "noImplicitThis": true,
    "noImplicitAny": true,
    "strictNullChecks": true,
    "allowSyntheticDefaultImports": true,
    "baseUrl": "./",
    "paths": {
      "@/*": ["src/*"]
    },
    "alwaysStrict": true,
    "skipLibCheck": true,
    // "esModuleInterop": true,
  },
  "include": [
    "./src/*"
  ],
  "exclude": [
    "./node_modules"
  ]
}
