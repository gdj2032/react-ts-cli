{
  "compilerOptions": {
    "lib": ["es6", "dom", "es2015"],
    "module": "ESNext",
    "target": "es5",
    "allowJs": true,
    "checkJs": true,
    "jsx": "react",
    "sourceMap": true,
    "moduleResolution": "node",
    "noImplicitReturns": true,
    "noImplicitThis": true,
    "noImplicitAny": true,
    "strictNullChecks": true,
    "allowSyntheticDefaultImports": true,
    "outDir": "./", 
    "baseUrl": "./",
    "paths": {
      "@/*": [
        "src/*"
      ]
    },
    "alwaysStrict": true,
    "skipLibCheck": true,
  },
  "include": ["src"],
  "exclude": ["node_modules"]
}
